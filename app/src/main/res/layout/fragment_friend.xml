<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.friend.FriendFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidLine_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.28" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidLine_h.0923"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0923" />

        <View
            android:id="@+id/view_head"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_splash"
            app:layout_constraintBottom_toTopOf="@id/guidLine_head"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/label_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Bạn bè"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/guidLine_h.0923"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidLine_h.0923" />

        <ImageView
            android:id="@+id/img_add_message"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_image_add_message"
            android:scaleType="center"
            android:src="@drawable/ic_add_friend_blue_icon"
            app:layout_constraintBottom_toBottomOf="@+id/guidLine_h.0923"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidLine_h.0923" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h.15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".15" />

        <EditText
            android:id="@+id/edt_search_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_image_add_message"
            android:drawableLeft="@drawable/ic_search_blue_icon"
            android:drawablePadding="12dp"
            android:fontFamily="@font/lato"
            android:hint="Tìm kiếm bạn bè..."
            android:lines="1"
            android:maxLines="1"
            android:padding="11dp"
            android:textFontWeight="500"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_cancel"
            app:layout_constraintTop_toBottomOf="@id/guideline_h.15" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/lato"
            android:text="Hủy"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/edt_search_message"
            app:layout_constraintLeft_toRightOf="@id/edt_search_message"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/edt_search_message" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h.23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".23" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rcv_message"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline_h.23"
            app:tabSelectedTextColor="@color/blue_start"
            app:tabTextColor="@color/blue_start"

            />

        <ImageView
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:src="@drawable/ic_search_gray_icon"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/tv_result"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="@string/result_search_message"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/viewpage2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/viewpage2" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpage2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_rcv_message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tablayout1" />

        <TextView
            android:id="@+id/tv_label_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/lato"
            android:text="@string/message"
            android:textAllCaps="true"
            android:textColor="@color/gray_cancel_search_message"
            android:textFontWeight="800"
            android:textSize="14dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/viewpage2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>