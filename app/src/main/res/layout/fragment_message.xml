<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.message.MessageFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidLine_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.28" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidLine_h.0923"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0923" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidLine_h.1866"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1866" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidLine_h.9213"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9213" />

        <View
            android:id="@+id/view_head"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_splash"
            app:layout_constraintBottom_toTopOf="@id/guidLine_head"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/guidLine_h.0923"
            app:layout_constraintLeft_toLeftOf="@+id/guidLine_h.1866"
            app:layout_constraintRight_toRightOf="@+id/guidLine_h.1866"
            app:layout_constraintTop_toTopOf="@+id/guidLine_h.0923" />

        <ImageView
            android:id="@+id/img_add_message"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_image_add_message"
            android:scaleType="center"
            android:src="@drawable/ic_add_message_blue_icon"
            app:layout_constraintBottom_toBottomOf="@+id/guidLine_h.0923"
            app:layout_constraintLeft_toLeftOf="@+id/guidLine_h.9213"
            app:layout_constraintRight_toRightOf="@+id/guidLine_h.9213"
            app:layout_constraintTop_toTopOf="@+id/guidLine_h.0923" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h.15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".15" />

        <EditText
            android:id="@+id/edt_search_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_image_add_message"
            android:drawableLeft="@drawable/ic_search_blue_icon"
            android:drawablePadding="12dp"
            android:hint="@string/find_message"
            android:padding="11dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_h.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h.23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".23" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_rcv_message"
            android:padding="12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline_h.23" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>